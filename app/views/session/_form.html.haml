.row
  .two.columns
    = form_tag '/login', :remote => true do
      = text_field_tag :email, nil, :placeholder => 'email', :autofocus => true
      %br
      = password_field_tag :password, nil, :placeholder => 'password'
      %br
      = submit_tag 'Login to eargism', :class => 'button radius tiny success'
      = button_tag 'Cancel', :class => 'button radius tiny alert'
