#login
  log in

.row
  .two.columns
    = form_tag '/login', :remote => true do
      = text_field_tag :email, nil, :placeholder => 'email', :autofocus => true
      = password_field_tag :password, nil, :placeholder => 'password'
      = submit_tag 'Login to eargasm', :class => 'button_nav_show'
      = button_tag 'Cancel', :class => 'button_nav_cancel'
