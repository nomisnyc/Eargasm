.row
  .five.columns
    = form_for @user do |f|
      = f.text_field :name, :placeholder => "Jack", :autofocus => true
      = f.label :name
      %br
      = f.text_field :email, :placeholder => "Smith@gmail.com"
      = f.label :email
      %br
      = f.text_field :location, :placeholder => "NYC"
      = f.label :location
      %br
      = f.password_field :password, :placeholder => "*****"
      = f.label :password
      %br
      = f.password_field :password_confirmation, :placeholder => "*****"
      = f.label :password_confirmation
      %br
      = f.submit nil, :class => 'button radus'
  .seven.columns
