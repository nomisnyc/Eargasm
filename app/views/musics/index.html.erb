<% @musics.each do |music| %>
  <ul>

    <% api_key= 'DBBDMGNYLR3WRPCUX'
      artist = music.name.gsub(' ', '+')

      url2 = "http://developer.echonest.com/api/v4/artist/images?api_key=#{api_key}&name=#{artist}&format=json&results=4"

