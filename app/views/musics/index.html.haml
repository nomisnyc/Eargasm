#musicloop.container
  - @musics.each do |music|
    %ul
      %li{:style => "list-style: none; display: inline"}
        .main
          %ul.music_attributes
            %li.hide= music.id
            %br
            %li Artist: #{link_to(music.name, music)}
            %br
            %li Song: #{music.song_name}
            %br
            %li= link_to 'Delete', music, :method => :delete
            %li= link_to 'Edit', edit_music_path(music)
            .idxpic= image_tag(music.image_url)
            - (c,d) = music.url.split('=',2)
            %br
            = music.song_name
            = link_to image_tag('fancy.jpg', music.url, :class => "various fancybox.iframe")
            %br
  = succeed "\u{a0}" do
    %br
  %br
