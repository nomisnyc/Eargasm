.row
  .large-12.columns
  #musicloop
    - @musics.each do |music|
      .row
        .large-4.columns
      %tr
        .main
          .music_attributes
            .idxpic= image_tag(music.image_url)
            - (c,d) = music.url.split('=',2)
            %td-music.id
            %br
              .artistlink
                %td.row Artist:  #{link_to(music.name.titleize, music)}
                %br
                .artistlink2
                  %td.row Song: #{music.song_name }
                  %br
                  %td.row Posted By:  #{music.posted_by.titleize}
                  %br
                  %td.row #{link_to image_tag('fancy.jpg', :class => 'fancythumb'), music.url, :class => "various fancybox.iframe"}
                  %br
                  .description
                    %td Description: #{music.description}
                    %br

