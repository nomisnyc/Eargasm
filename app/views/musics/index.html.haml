.row
  .large-12.columns
  #musicloop
    - @musics.each do |music|
      .table
      %tr
        .main
          .music_attributes
            .idxpic= image_tag(music.image_url)
            - (c,d) = music.url.split('=',2)
            %td-music.id
            %br
            %td.row Artist:  #{link_to(music.name, music)}
            %br
            %td.row Song: #{link_to image_tag('rails.png'), music.url, :class => "various fancybox.iframe"}
            %br
            %td.row Posted By:  #{music.posted_by}
            %br
            %td#description Description: #{music.description}
            %br